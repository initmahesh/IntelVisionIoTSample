{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "registryName": {
                "username": "$CONTAINER_REGISTRY_USERNAME",
                "password": "$CONTAINER_REGISTRY_PASSWORD",
                "address": "$CONTAINER_REGISTRY_ADDRESS"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "VisionSampleModule": {
            "version": "1.003",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.VisionSampleModule.amd64}",
              "createOptions": {
                "HostConfig": {
                  "Binds": [
                    "/tmp/.X11-unix:/tmp/.X11-unix",
                    "/dev:/dev"
                  ],
                  "NetworkMode": "host",
                  "IpcMode": "host",
                  "Privileged": true
                },
                "NetworkingConfig": {
                  "EndpointsConfig": {
                    "host": {}
                  }
                },
                "Env": [
                  "DISPLAY=:0"
                ]
              
              }
            }
          },
          "CentralAgent": {
            "version": "1.002",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CentralAgent}",
              "createOptions": {}
            },
            "env": {
              "EdgeConnectionString": {
                "value": "HostName=iotc-5762c12e-3a40-48b2-8965-d55750749fb0.azure-devices.net;DeviceId=8db08e80-1c04-41c5-9ec8-b2487515e790;SharedAccessKey=RNMexUyZKquWPIl/QJDmqDbIGr0jxpYcrBJ1GbPNwG4="
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "VisionSampleModuleToIoTHub": "FROM /messages/modules/VisionSampleModule/outputs/* INTO $upstream",
          "VisionSampleModuleToCentralAgent": "FROM /messages/modules/VisionSampleModule/outputs/* INTO BrokeredEndpoint(\"/modules/CentralAgent/inputs/input\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}